<h1>タスクリスト一覧</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>id</th>
            <th>タスク</th>
            <th>内容</th>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
        
        <tr>
            <td><%= link_to task.id, task %></td>
            <td><%= task.content %></td>
            <td><%= task.status %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= paginate @tasks %>

<%= link_to '新規タスクの記入', new_task_path, class: "btn btn-primary" %>
    

