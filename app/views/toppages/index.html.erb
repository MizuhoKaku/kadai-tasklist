<% if logged_in? %>
  <p>ログイン完了ユーザー：<%= current_user.name %></p>
  
  <aside>
    <%= render 'tasks/form', task: @task %>
  </aside>
  
  <br>
  
  <table class="table table-striped">
    <thead>
        <tr>
            <th>id</th>
            <th>タスク</th>
            <th>内容</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
        
        <tr>
            <td><%= task.id %></td>
            <td><%= task.content %></td>
            <td><%= task.status %></td>
            <td>
              <%= link_to "update", edit_task_path(task) , class: 'btn btn-primary' %>
              <%= link_to "delete", task, method: :delete, data: {confirm:"You sure?"}, class: 'btn btn-danger' %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
  
<% else %>
  <div class="center jumbotron">
      <div class="text-center">
          <h1>Tasklist</h1>
          <%= link_to "Sign up", new_user_path, class: "btn btn-primary" %>
      </div>
  </div>
<% end %>  